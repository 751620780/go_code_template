{
    // 此文件是运行按钮（F5）后进行的操作，仅供python程序使用
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    // 注意：windows10下，如果您的电脑调试时启动的调试终端是powershell而不是cmd，请调整path环境变量中powershell路径的顺序后重新启动vscode
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch Current Java File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "name": "GO->调试当前文件",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "env": {
                // "PYTHONHOME":"C:/ProgramData/Anaconda2",
                // "PYTHONPATH":""
            },
            // "args": ["1","/root/a","a.txt"],
            "dlvLoadConfig": {
                "followPointers": true,
                "maxVariableRecurse": 1,
                "maxStringLen": 1024,
                "maxArrayValues": 64,
                "maxStructFields": -1
            },
            "debugAdapter": "legacy"
        },
        {
            "name": "Python->调试当前文件",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--plugin",
                "DetectWebshellPlugin.py,DetectYaraPlugin.py,",
                "--index",
                "0"
            ],
            "env": {
                "PYTHONIOENCODING": "GBK" //设置控制台输出文字格式为GBK，防止Windows的调试时控制台输出中文出现乱码
            }
        },
        {
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
        },
        {
            "name": "Python->Django调试",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/WebServer/manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver",
                "0.0.0.0:8000",
                "--noreload",
                "--nothreading", //如果不添加这个参数就无法进行调试（就是无法命中断点，但是开启之后就无法快速响应网页刷新）
            ],
            "django": true,
            "env": {
                "PYTHONIOENCODING": "GBK"
            }
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        },
    ]
}